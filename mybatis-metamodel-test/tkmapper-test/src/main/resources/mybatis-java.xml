<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="cacheEnabled" value="false"/>
        <setting name="lazyLoadingEnabled" value="false"/>
        <setting name="aggressiveLazyLoading" value="true"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <setting name="logImpl" value="LOG4J"/>
    </settings>

    <typeAliases>
        <package name="com.github.thinwonton.mybatis.metamodelgen.test.tkmapper.entity"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC">
                <property name="" value=""/>
            </transactionManager>
            <dataSource type="UNPOOLED">
                <property name="driver" value="org.hsqldb.jdbcDriver"/>
                <property name="url" value="jdbc:hsqldb:mem:tkmapper_test"/>
                <property name="username" value="sa"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper class="com.github.thinwonton.mybatis.metamodelgen.test.tkmapper.mapper.CountryMapper"/>
        <mapper class="com.github.thinwonton.mybatis.metamodelgen.test.tkmapper.mapper.MusicMapper"/>
        <mapper class="com.github.thinwonton.mybatis.metamodelgen.test.tkmapper.mapper.UserInfoMapper"/>
    </mappers>

</configuration>
